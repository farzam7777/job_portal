<li><a href="<%= job_path(job) %>">
  <div class="job-list-content" style="margin-left: 14px;">
    <% if job.job_type == 'Fixed' %>
      <h4> <%= job.title %> <span class="full-time"><%= job.job_type %></span></h4>
    <% else %>
      <h4> <%= job.title %> <span class="part-time"><%= job.job_type %></span></h4>
    <% end %>
    <p style="margin-top: -2%; margin-bottom: 1%;"> 
      <span class="tags"> Tags: </span>
      <% job.tag_list.each do |tag| %>
        <span><%= tag %></span>
      <% end %>
    </p>
    <div class="job-icons">
      <span><i class="fa fa-clock-o"></i> <%= job.start_date %> </span>
      <span><i class="fa fa-times"></i> <%= job.end_date %> </span>
      <% if job.job_type == 'Fixed' %>
        <span><i class="fa fa-money"></i> $<%= job.payment %> </span>
      <% else %>
        <span><i class="fa fa-money"></i> $<%= job.payment %> / hour</span>
      <% end %>
    </div>
    <p> <%= truncate(job.description, length: 85) %> </p>
  </div>
  </a>
  <div class="clearfix"></div>
</li>
